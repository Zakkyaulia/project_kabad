<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Project Kabad</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;600;700&display=swap" rel="stylesheet">
    <style>body { font-family: 'Plus Jakarta Sans', sans-serif; }</style>
</head>
<body class="bg-slate-50 min-h-screen">
    <nav class="bg-white/80 backdrop-blur-md border-b border-slate-200 sticky top-0 z-50">
        <div class="container mx-auto px-6 py-4 flex justify-between items-center">
            <div class="flex items-center space-x-3">
                <div class="w-10 h-10 bg-green-600 rounded-xl flex items-center justify-center shadow-lg shadow-green-200">
                    <span class="text-white font-bold text-xl">K</span>
                </div>
                <h1 class="text-xl font-bold text-slate-800">Kabad <span class="text-green-600">Pro</span></h1>
            </div>
            <div class="flex items-center space-x-6">
                <div class="flex flex-col text-right">
                    <span id="displayNama" class="text-slate-800 font-bold"></span>
                    <span id="displayNIP" class="text-slate-500 text-xs"></span>
                </div>
                <button onclick="logout()" class="bg-red-50 text-red-600 px-5 py-2.5 rounded-xl font-bold hover:bg-red-100 transition-all border border-red-100">
                    Keluar
                </button>
            </div>
        </div>
    </nav>

    <main class="container mx-auto px-6 py-10">
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-12">
            <div>
                <h2 class="text-3xl font-extrabold text-slate-800 tracking-tight">Dashboard Saya</h2>
                <p class="text-slate-500 mt-1">Kelola semua dokumentasi kegiatan Anda dengan mudah.</p>
            </div>
            <button onclick="toggleModal()" class="bg-green-600 text-white px-6 py-3.5 rounded-2xl font-bold hover:bg-green-700 transition-all shadow-lg shadow-green-100 flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
                </svg>
                Tambah Bukti Baru
            </button>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-10">
            <div class="bg-white p-8 rounded-3xl shadow-sm border border-slate-200 flex items-center gap-6">
                <div class="bg-green-50 p-4 rounded-2xl">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <div>
                    <p class="text-sm font-bold text-slate-400 uppercase tracking-widest">Total Sertifikat</p>
                    <p id="totalCount" class="text-4xl font-black text-slate-800 mt-1">0</p>
                </div>
            </div>

            <div class="bg-white p-8 rounded-3xl shadow-sm border border-slate-200 flex items-center gap-6">
                <div class="bg-green-50 p-4 rounded-2xl">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <div>
                    <p class="text-sm font-bold text-slate-400 uppercase tracking-widest">Total Akumulasi JP</p>
                    <p id="totalJP" class="text-4xl font-black text-slate-800 mt-1">0</p>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-3xl shadow-sm border border-slate-200 overflow-hidden">
            <div class="overflow-x-auto">
                <table class="w-full text-left">
                    <thead class="bg-slate-50/50">
                        <tr>
                            <th class="px-8 py-5 text-sm font-bold text-slate-500 uppercase tracking-wider">Nama Sertifikat</th>
                            <th class="px-8 py-5 text-sm font-bold text-slate-500 uppercase tracking-wider">Rentang Waktu</th>
                            <th class="px-8 py-5 text-sm font-bold text-slate-500 uppercase tracking-wider">JP</th>
                            <th class="px-8 py-5 text-sm font-bold text-slate-500 uppercase tracking-wider text-right">Aksi</th>
                        </tr>
                    </thead>
                    <tbody id="keaktifanBody" class="divide-y divide-slate-100"></tbody>
                </table>
            </div>
        </div>
    </main>

    <div id="modalBukti" class="hidden fixed inset-0 bg-slate-900/50 backdrop-blur-sm z-[60] flex items-center justify-center p-4">
        <div class="bg-white rounded-3xl p-8 w-full max-w-lg shadow-2xl">
            <h3 class="text-2xl font-bold text-slate-800 mb-6">Tambah Bukti Kegiatan</h3>
            <form id="formUpload" class="space-y-4">
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">Tanggal Mulai</label>
                        <input type="date" name="tanggal_mulai" id="tanggal_mulai" required class="w-full px-4 py-3 rounded-xl border border-slate-200 outline-none focus:border-green-500">
                    </div>
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">Tanggal Selesai</label>
                        <input type="date" name="tanggal_selesai" id="tanggal_selesai" required class="w-full px-4 py-3 rounded-xl border border-slate-200 outline-none focus:border-green-500">
                    </div>
                </div>
                
                <div>
                    <label class="block text-sm font-semibold text-slate-700 mb-2">Jam Perhari (Min. 1)</label>
                    <input type="number" name="jp" id="jpInput" min="1" placeholder="Masukkan angka JP" required class="w-full px-4 py-3 rounded-xl border border-slate-200 outline-none focus:border-green-500 transition-all">
                </div>

                <div>
                    <label class="block text-sm font-semibold text-slate-700 mb-2">Pilih File Sertifikat</label>
                    <input type="file" name="files" required class="w-full text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:bg-green-50 file:text-green-700 hover:file:bg-green-100 cursor-pointer">
                </div>

                <div class="flex gap-3 mt-6">
                    <button type="button" onclick="toggleModal()" class="flex-1 px-4 py-3 border border-slate-200 rounded-xl font-bold text-slate-600 hover:bg-slate-50 transition-all">Batal</button>
                    <button type="submit" class="flex-1 px-4 py-3 bg-green-600 text-white rounded-xl font-bold shadow-lg shadow-green-100 hover:bg-green-700 transition-all transform active:scale-95">Simpan</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        const token = localStorage.getItem('token');
        if (!token) window.location.href = '/login';

        window.onload = () => {
            document.getElementById('displayNama').innerText = localStorage.getItem('userNama') || 'User';
            document.getElementById('displayNIP').innerText = 'NIP: ' + (localStorage.getItem('userNIP') || '-');
            loadData();
        };

        function toggleModal() {
            const modal = document.getElementById('modalBukti');
            modal.classList.toggle('hidden');
            if(modal.classList.contains('hidden')) document.getElementById('formUpload').reset();
        }

        async function loadData() {
            try {
                const response = await fetch('/api/keaktifan', {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                
                if (!response.ok) throw new Error("Gagal mengambil data");

                const data = await response.json();
                const body = document.getElementById('keaktifanBody');
                const totalCount = document.getElementById('totalCount');
                const totalJP = document.getElementById('totalJP');
                
                body.innerHTML = '';
                
                let sumJP = 0;
                totalCount.innerText = data.length;

                if (data.length === 0) {
                    body.innerHTML = `<tr><td colspan="4" class="px-8 py-10 text-center text-slate-400">Belum ada data bukti kegiatan.</td></tr>`;
                    totalJP.innerText = 0;
                    return;
                }

                data.forEach(item => {
                    sumJP += parseInt(item.JP || 0);
                    const tglAwal = item.tanggal_mulai ? new Date(item.tanggal_mulai).toLocaleDateString('id-ID') : '-';
                    const tglAkhir = item.tanggal_selesai ? new Date(item.tanggal_selesai).toLocaleDateString('id-ID') : '-';

                    body.innerHTML += `
                        <tr class="hover:bg-slate-50/50 transition-colors">
                            <td class="px-8 py-5">
                                <div class="flex flex-col">
                                    <span class="text-slate-700 font-semibold">${item.nama_sertif}</span>
                                    <span class="text-xs text-slate-400">File: ${item.file_sertif}</span>
                                </div>
                            </td>
                            <td class="px-8 py-5 text-slate-600 text-sm">
                                ${tglAwal} - ${tglAkhir}
                            </td>
                            <td class="px-8 py-5 text-slate-600 font-medium">${item.JP} JP</td>
                            <td class="px-8 py-5 text-right">
                                <button onclick="deleteData(${item.id})" class="text-red-500 hover:text-red-700 font-bold px-4 py-2 rounded-lg hover:bg-red-50 transition-all">
                                    Hapus
                                </button>
                            </td>
                        </tr>`;
                });
                totalJP.innerText = sumJP;
            } catch (err) {
                console.error('Error:', err);
            }
        }

        document.getElementById('formUpload').onsubmit = async (e) => {
            e.preventDefault();
            const tglMulaiVal = document.getElementById('tanggal_mulai').value;
            const tglSelesaiVal = document.getElementById('tanggal_selesai').value;
            const jp = parseInt(document.getElementById('jpInput').value);

            if (isNaN(jp) || jp <= 0) {
                Swal.fire('Input Salah', 'Jam Perhari (JP) harus angka positif!', 'warning');
                return;
            }

            const tglMulai = new Date(tglMulaiVal);
            const tglSelesai = new Date(tglSelesaiVal);

            if (tglSelesai < tglMulai) {
                Swal.fire('Rentang Salah', 'Tanggal selesai tidak boleh sebelum tanggal mulai!', 'warning');
                return;
            }

            const formData = new FormData(e.target);
            try {
                const res = await fetch('/api/keaktifan/upload', {
                    method: 'POST',
                    headers: { 'Authorization': `Bearer ${token}` },
                    body: formData
                });

                if (res.ok) {
                    Swal.fire({ icon: 'success', title: 'Berhasil!', text: 'Bukti kegiatan telah disimpan.' });
                    toggleModal();
                    loadData();
                } else {
                    const error = await res.json();
                    Swal.fire('Gagal', error.message || 'Terjadi kesalahan server', 'error');
                }
            } catch (err) { 
                Swal.fire('Error', 'Gagal terhubung ke server', 'error'); 
            }
        };

        async function deleteData(id) {
            Swal.fire({
                title: 'Apakah Anda yakin?',
                text: "Data yang dihapus tidak bisa dikembalikan!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#10b981',
                cancelButtonColor: '#ef4444',
                confirmButtonText: 'Ya, Hapus!',
                cancelButtonText: 'Batal'
            }).then(async (result) => {
                if (result.isConfirmed) {
                    const res = await fetch(`/api/keaktifan/${id}`, {
                        method: 'DELETE',
                        headers: { 'Authorization': `Bearer ${token}` }
                    });
                    if (res.ok) {
                        Swal.fire('Terhapus!', 'Data berhasil dihapus.', 'success');
                        loadData();
                    }
                }
            });
        }

        function logout() {
            Swal.fire({
                title: 'Keluar?',
                text: "Anda akan keluar dari sesi ini.",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#10b981',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Ya, Keluar'
            }).then((result) => {
                if (result.isConfirmed) {
                    localStorage.clear();
                    window.location.href = '/login';
                }
            });
        }
    </script>
</body>
</html>